<?xml version="1.0"?>
<psalm>
    <projectFiles>
        <directory name="src" />
    </projectFiles>
    <issueHandlers>
        <PossiblyUndefinedVariable>
            <errorLevel type="suppress">
                <directory name="src" /> <!-- all InvalidReturnType issues in this directory are suppressed -->
            </errorLevel>
        </PossiblyUndefinedVariable>
        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="src" /> <!-- all InvalidReturnType issues in this directory are suppressed -->
                <directory name="../../../app/config/" /> <!-- all InvalidReturnType issues in this directory are suppressed -->
            </errorLevel>
        </UndefinedClass>
    </issueHandlers>
    <enableExtensions>
        <extension name="mysqli"/>
    </enableExtensions>
</psalm>